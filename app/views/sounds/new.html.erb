<h1>New Sound</h1>

<%= form_for :sound, url: {action: :create} do |f| %>
  <%= render partial: 'shared/form_errors', locals: {model: @sound} %>

  <%= f.hidden_field :uploader_id %>

  <div class=field>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class=submit>
    <%= f.submit %>
  </div>
<% end %>
